<UserControl
    x:Class="DartsScoreMaster.Controls.ContinuationBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Border BorderThickness="2" BorderBrush="White" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"  Visibility="Collapsed" x:Name="LayoutRoot"  Opacity="0" >
        <Border.Resources>
            <Storyboard x:Name="FadeIn" >
                <DoubleAnimation  From="0" To="1" Storyboard.TargetName="LayoutRoot" Storyboard.TargetProperty="Opacity" Duration="0:0:1.5" />
            </Storyboard>
        </Border.Resources>
        <TextBlock Margin="50"  FontFamily="Comic Sans MS" FontSize="30"  Text="TAP TO CONTINUE"></TextBlock>
    </Border>
</UserControl>
